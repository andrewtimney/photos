@model List<Microsoft.WindowsAzure.Storage.Blob.CloudBlockBlob>

@{
    ViewBag.Title = "Sophia & Matilda";
}

<style>
    h4 {
        color: grey;
    }
</style>

<div>
    <h2>Sophia and Matilda <small>17th May 2015</small></h2>
    <h4><span class="glyphicon glyphicon-map-marker"></span> Dumbarton</h4>
</div>

<div class="row">
    @foreach (var b in @Model)
    {
        <div style="margin: 8px; border: 2px solid white" class="col-md-12">
            <img src="@b.Uri" width="100%"/>
        </div>
    }
</div>